<h1>Questions</h1>

<%= link_to 'Ask question', new_question_path, class: 'btn btn-primary btn-lg mb-3' %>

<% @questions.each do |question| %>

    <div class="card mb-4" style="width: 100%;">
        <div class="card-body">
            <h2 class="card-title"><%= question.title%></h2>
            <section class="card-text">
                <time datetime="<%= question.formated_created_at %>">
                    <%= question.formated_created_at %>
                </time>
                <p class="my-2"><%=question.body%></p>
            </section>
                <%= link_to 'Show', question_path(question), class: 'btn btn-primary' %> 
                <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary' %> 
                <%= link_to 'Delete', question_path(question), class: 'btn btn-danger', data: {method: :delete, confirm: "Are you sure ?"} %>
        </div>
    </div>

<%end%>




